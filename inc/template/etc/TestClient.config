<configuration>
  <system.runtime.remoting>
    <application>
      <channels>
        <channel ref="tcp" port="0">
          <clientProviders>
            <formatter ref="binary" />
          </clientProviders>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
        </channel>
      </channels>

      <client>
        <wellknown type="Ict.Common.Remoting.Shared.IClientManagerInterface, Ict.Common.Remoting.Shared" url="tcp://localhost:${Server.Port}/Clientmanager" />
      </client>

    </application>
  </system.runtime.remoting>

  <appSettings>
    <add key="Client.DebugLevel" value="0" />
    <add key="OpenPetra.PathLog" value="${dir.petraclient.log}" />
    <add key="OpenPetra.PathTemp" value="${dir.petraclient.log}" />
    <add key="Testing.Path" value="{dir.csharp}/ICT/Testing" />
    <add key="Reporting.PathReportSettings" value="${dir.root}/XmlReports/Settings" />
    <add key="Reporting.PathReportUserSettings" value="${dir.petraclient.log}/tmp/Settings" />
    <add key="UINavigation.File" value="${dir.petraclient.definitions}" />
    <add key="Resource.Dir" value="${dir.root}/resources" />
    <add key="UseWindowsUserID" value="true" />                <!-- Default Value: "false" -->
    <add key="DelayedDataLoading" value="true" />                <!-- Default Value: "false" -->

    <add key="UseWindowsUserID" value="true" />
    <add key="DelayedDataLoading" value="true" />

    <add key="AutoLogin" value="demo" />
    <add key="AutoLoginPasswd" value="demo" />
    <add key="LedgerNumber" value="43" />
  </appSettings>
</configuration>
