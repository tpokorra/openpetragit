<configuration>
  <system.runtime.remoting>
    <application>
      <channels>
        <channel ref="tcp">
          <clientProviders>
            <formatter ref="binary" />
            <provider type="Ict.Petra.Shared.RemotingSinks.Encryption.EncryptionClientSinkProvider, Ict.Petra.Shared.lib.RemotingSinks"
                HttpsPublicKeyXml="https://{#WEBSITE}/publickeys/publickey.xml"/>
          </clientProviders>
        </channel>
      </channels>
      <client>
        <wellknown type="Ict.Petra.Shared.Interfaces.IClientManagerInterface, Ict.Petra.Shared.lib.Interfaces" url="tcp://{#PETRAHOST}:{#PETRAPORT}/Clientmanager" />
      </client>

    </application>
  </system.runtime.remoting>

  <appSettings>
    <add key="OpenPetra.PathLog" value="{userappdata}\tmp30" />
    <add key="OpenPetra.PathTemp" value="{userappdata}\tmp30" />
    <add key="OpenPetra.PathExport" value="{userappdata}\tmp30\export" />
    <add key="Reporting.PathReportSettings" value="{userappdata}\reports30\Settings" />
    <add key="Reporting.PathReportUserSettings" value="{userappdata}\reports30\Settings" />
    <add key="OpenPetra.Path.Patches" value="{userappdata}\patches30"/>
    <add key="OpenPetra.Path.RemotePatches" value="https://{#WEBSITE}/patches/{#ORGNAME}/"/>
    <add key="UINavigation.File" value="UINavigation.yml" />
    <add key="Resource.Dir" value="..\resources30" />
    <add key="UseWindowsUserID" value="true" />                <!-- Default Value: "false" -->
    <add key="DelayedDataLoading" value="true" />                <!-- Default Value: "false" -->
    
    <add key="ServerPollIntervalInSeconds" value="15" />
    <add key="ServerObjectKeepAliveIntervalInSeconds" value="20" />

    <add key="RunAsRemote" value="true" />
  </appSettings>
</configuration>