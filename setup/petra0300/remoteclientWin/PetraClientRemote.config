<configuration>
  <system.runtime.remoting>
    <application>
      <channels>
        <channel ref="tcp">
          <clientProviders>
            <formatter ref="binary" />
            <provider type="Ict.Petra.Shared.RemotingSinks.Encryption.EncryptionClientSinkProvider, Ict.Petra.Shared.RemotingSinks"
                HttpsPublicKeyXml="https://PETRAHOST/publickeys/publickey.xml"/>
          </clientProviders>
        </channel>
      </channels>
      <client>
		    <wellknown type="Ict.Common.Remoting.Shared.IClientManagerInterface, Ict.Common.Remoting.Shared" url="tcp://PETRAHOST:PETRAPORT/Clientmanager" />
      </client>

    </application>
  </system.runtime.remoting>

  <appSettings>
    <add key="OpenPetra.PathTemp" value="TMP30" />
    <add key="OpenPetra.PathExport" value="TMP30/export" />
    <add key="Reporting.PathReportSettings" value="REPORTSETTINGSPATH" />
	<add key="Reporting.PathReportUserSettings" value="REPORTUSERSETTINGSPATH" />
    <add key="OpenPetra.Path.Patches" value="PATCHES30"/>
    <add key="OpenPetra.Path.RemotePatches" value="REMOTEPATCHESPATH"/>
    <add key="UINavigation.File" value="UINavigation.yml" />
    <add key="Resource.Dir" value="..\resources30" />
    <add key="UseWindowsUserID" value="true" />                <!-- Default Value: "false" -->
    <add key="DelayedDataLoading" value="true" />                <!-- Default Value: "false" -->
    
    <add key="ServerPollIntervalInSeconds" value="15" />
    <add key="ServerObjectKeepAliveIntervalInSeconds" value="20" />

    <add key="RunAsRemote" value="true" />
  </appSettings>
</configuration>